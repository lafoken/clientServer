generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("APP_PG_DATABASE_URL")
}

model Worker {
  id          String   @id @default(uuid())
  name        String
  role        String
  hourlyRate  Float
  experience  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
